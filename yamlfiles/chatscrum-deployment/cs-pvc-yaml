apiVersion: v1
kind: PersistentVolume
metadata:
  name: cs-pv-volume
  labels:
    type: local
spec:
  storageClassName: kops-ssd-1-17
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/opt/dockermounts"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: cs-pvc-claim
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi